@using TwitterBackUp.Areas.Admin.Models;
@model List<UserViewModel>





    <table class="table">
        <thead>
            <tr>
                <th scope="col">TweetId</th>
                <th scope="col">UserName/Email</th>
                <th scope="col">Make Admin</th>
                <th scope="col">Delete User</th>
                <th scope="col">View Save Tweets</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>#@user.Id</td>
                    <td>@user.UserName</td>
             
                    <td><a id="@user.Id"class="btn btn-success promoteUser"data-name="@user.Id">Promote</a></td>
                    <td><a class="btn btn-danger deleteUser @user.Id" data-name="@user.Id">Delete</a></td>
                    <td><button class="btn btn-link tweet-details" onclick="tweetDetails('@user.UserName', '@user.Id')">Tweets</button></td>



                </tr>
            }
        </tbody>
    </table>


