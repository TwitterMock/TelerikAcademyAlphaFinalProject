@model SearchViewModel

@{
    Layout = "_Layout";
}

<div class="container">
    <br />
    @if (Model.IsSuccess)
    {
        <div class="row text-right">

            @if (Model.IsSavedTwitter)
            {
                <button disabled id="save-twitter-btn" class="btn btn-success">Twitter Saved!</button>
            }
            else
            {
                <form id="__AjaxAntiForgeryForm" asp-antiforgery="true"></form>
                <button id="save-twitter-btn" class="btn btn-primary" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Loading" data-twitter-srcname="@Model.SearchedTwitter.ScreenName">
                    Save Twitter
                </button>
            }

            <div class="col-lg-1 pull-right">
                <a asp-controller="Tweet" asp-action="TwitterTimeline" asp-route-twitterScreenName="@Model.SearchedTwitter.ScreenName" class="btn btn-primary">
                    Table View
                </a>
            </div>

        </div>

        <a class="twitter-timeline" href="@Model.SearchedTwitter.Url" data-tweet-limit="20">Tweets by @Model.SearchedTwitter.Username</a>
    }
    else
    {
        <h2>Twitter by the name <em>@Model.SearchString</em> not found!</h2>
    }
</div>