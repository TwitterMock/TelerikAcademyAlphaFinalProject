@model SavedTwittersViewModel

@{
    var twitterScreenName = Model.Twitters.FirstOrDefault()?.ScreenName;
    var twitterUrl = $"https://twitter.com/{twitterScreenName}";
}

<h3>Saved Twitter Accounts</h3>

<table class="table">
    <thead>
        <tr>
         
            <th scope="col">Username</th>
            <th scope="col">Description</th>
            <th scope="col">FollowersCount</th>
            <th scope="col">Link</th>
            <th scope="col">Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var twitter in Model.Twitters)
        {
            <tr id="@twitter.TwitterId">

        <td>#@twitter.Username</td>
        <td>@twitter.Description</td>
        <td>@twitter.FollowersCount</td>
        
    
     
        
                <td><a href="@twitter.Url">link</a></td>
                <td>
                <form asp-area=""  asp-controller="Twitter" asp-action="DeleteTwitter" method="post">
                    <input hidden name="twitterId" value="@twitter.TwitterId" />
                    <button type="submit" id ="deleteSingleTwitterAccount" class="btn btn-danger">Remove</button>
                </form>
                    </td>

       
               
        </tr>
            }
    </tbody>
</table>



